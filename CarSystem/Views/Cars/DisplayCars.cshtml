@section scripts {
    <script>
        $(document).ready(function () {
            $('table.table').dataTable();
        });

        (function init() {
            $("#accordion").accordion()
        })()

        function deleteCar(carId, elem) {
            var _comp = $(elem);
            $.ajax({
                type: "DELETE",
                url: "/api/Cars/" + carId,
                success: function (result) {
                    alert("Car has been deleted!");
                    console.log(_comp);
                    $(_comp).parent().parent().slideUp();
                },
                failure: function (result) {
                    console.log(result);
                }
            });
        }

        function deleteCollectionCars() {
            $("table tr.data input[type=checkbox]:checked").each(function () {
                deleteCar($(this).val(), this);
            });
        }
    </script>
